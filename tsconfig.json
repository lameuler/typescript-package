{
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node16",
        "module": "node16",
        "target": "es2022",
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist/types",
        "emitDeclarationOnly": true,
        "noImplicitAny": true
    }
}
